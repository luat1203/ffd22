<% provide(:title, "Create Product") %>
<h1>Create Product</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@product) do |f| %>
      <%= render "shared/error_messages", object: f.object %>
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :price %>
      <%= f.number_field :price, class: "form-control" %>

      <%= f.label :information %>
      <%= f.text_area :information, class: "form-control" %>

      <span class="picture">
      <%= f.file_field :picture, class: "form-control" %>
      </span>

      <%= f.label :classify %>
      <%= f.select(:classify, options_for_select([["Food", true],
        ["Drink", false]]), {include_blank: false}, class: "form-control") %>

      <%= f.label :quantity %>
      <%= f.number_field :quantity, class: "form-control" %>

      <%= f.label :category_id, "Category id" %>
      <%= f.select(:category_id, Category.all.collect{|c| [ c.name, c.id ]},
        {include_blank: false}, class: "form-control") %>

      <%= f.submit "Create Product", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
