<% provide(:title, t(".heading")) %>
<h1 class="text-center"><%= t ".heading" %></h1>

<div class="col-md-9">
  <div>
    <%= link_to t("add"), new_product_path,
      class: "btn btn-success" if can? :create, Product %>
  </div>

  <div class="dropdown-divider"></div>

  <%= search_form_for @q do |f| %>
    <div class="row">
      <div class="field form-group col">
        <%= f.search_field :name_or_information_cont,
          placeholder: t(".name_or_information"), class: "form-control" %>
      </div>
    </div>
    <div class="row">
      <div class="field form-group col">
        <%= f.select :classify_eq, [[t("food"), true],
          [t("drink"), false]], {include_blank: t("choose_classify")},
          class: "form-control" %>
      </div>
      <div class="field form-group col">
        <%= f.select :category_name_eq, collect_categories_name,
          {include_blank: t(".choose_category")}, class: "form-control" %>
      </div>

      <div class="field form-group col">
        <%= f.number_field :price_gteq, placeholder: t(".min"),
          class: "form-control" %>
      </div>
      <div class="field form-group col">
        <%= f.number_field :price_lteq, placeholder: t(".max"),
          class: "form-control" %>
      </div>
    </div>

    <div class="actions form-group col">
      <%= f.submit t("search"), class: "btn btn-primary" %>
    </div>
  <% end %>

  <div class="dropdown-divider"></div>

  <% if @products.present? %>
    <div id="products_div" class="row">
      <%= render @products %>
    </div>

    <%= will_paginate(@products,
      renderer: WillPaginate::ActionView::Bootstrap4LinkRenderer) %>
  <% end %>
</div>
