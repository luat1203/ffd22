<% provide(:title, t(".title")) %>

<%= form_for(:password_reset, url: password_resets_path,
  html: {class: "form-signin"}) do |f| %>
  <h1 class="h3 mb-3 font-weight-normal"><%= t(".title") %></h1>

  <%= f.label :email, t("email"), class: "sr-only" %>
  <%= f.email_field :email, class: "form-control",
    placeholder: t("email"), autofocus:"" %>

  <%= f.submit t("submit"), class: "btn btn-lg btn-primary btn-block" %>
<% end %>


