<% provide(:title, @category.name) %>
<div class="row">
  <div class="col-lg-9">
    <% if @category.products.any? %>
      <h3>Products (<%= @category.products.count %>)</h3>
      <div class="row">
        <%= render @products %>
      </div>
      <%= will_paginate(@products, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer, class: 'justify-content-center') %>
    <% end %>
  </div>
</div>
