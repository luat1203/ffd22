<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
  <div class="container">

    <%= link_to t("foods_and_drinks"),
      root_path, id: "logo", class: "navbar-brand" %>

      <%= search_form_for @q, class: "mx-auto" do |f| %>
        <div class="input-group">
          <%= f.search_field :name_cont, placeholder: t("search"),
            class: "form-control" %>
          <div class="input-group-append">
            <%= f.submit t("search"), class: "btn btn-success" %>
          </div>
        </div>
      <% end %>


    <div class="collapse navbar-collapse" id="navbarResponsive">
      <ul class="navbar-nav ml-auto">
        <li class="nav-item">
          <%= link_to carts_path, class: "btn btn-info" do %>
            <%= t "cart" %>
            <span class="cart-text badge badge-light ml-1">
              <%= render_cart_quantity %>
            </span>
          <% end %>
        </li>

        <li class="nav-item">
          <%= link_to t(".home"), root_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to t(".products"), products_path, class: "nav-link" %>
        </li>

        <% if user_signed_in? %>
          <% if current_user.admin? %>
            <li class="nav-item">
              <%= link_to t(".categories"), categories_path,
                class: "nav-link" %>
            </li>

            <li class="nav-item">
              <%= link_to t(".users"), users_path, class: "nav-link" %>
            </li>

            <li class="nav-item">
              <%= link_to t(".suggestions"), suggestions_path,
                class: "nav-link" %>
            </li>

            <li class="nav-item">
              <%= link_to t(".orders"), orders_path, class: "nav-link" %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to t(".suggestions"), new_suggestion_path,
                class: "nav-link" %>
            </li>
          <% end %>

          <li class="nav-item dropdown">
            <%= link_to "#", class: "nav-link dropdown-toggle",
              "data-toggle" => "dropdown" do %>
              <%= t ".account" %><b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <li class="dropdown-item">
                <%= link_to t(".profile"), current_user %>
              </li>
              <li class="dropdown-item">
                <%= link_to t(".settings"), edit_user_registration_path %>
              </li>
              <li class="dropdown-item">
                <%= link_to t(".my_order"), orders_path %>
              </li>
              <li class="dropdown-divider"></li>
              <li class="dropdown-item">
                <%= link_to t(".log_out"), destroy_user_session_path,
                  method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to t(".log_in"), new_user_session_path,
              class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
