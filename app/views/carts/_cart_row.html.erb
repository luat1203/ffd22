<%= form_for(:cart, url: url_for(controller: "carts", action: "update"),
  remote: true) do |f| %>
  <% if product.present? %>
    <div class="row">
      <div class="col-12 col-sm-12 col-md-2 text-center">
        <%= image_tag product.image.url, size: "153x128",
          class: "img-responsive" %>
      </div>
      <div class="col-12 text-sm-center col-sm-12 text-md-left col-md-6">
          <h4 class="product-name">
            <strong><%= link_to product.name, product %></strong>
          </h4>
          <h4>
              <small><%= truncate_info product.information %></small>
          </h4>
      </div>
      <div class="col-12 col-sm-12 text-sm-center col-md-4 text-md-right row">
        <div class="col-4 col-sm-4 col-md-4 text-md-right pt-2">
          <h6><strong><%= product.price %> $</strong></h6>
        </div>
        <div class="col-4 col-sm-4 col-md-3">
            <div class="quantity">
              <%= f.number_field :quantity, value: quantity.to_i,
                class: "form-control", min: 1 %>
              <%= f.hidden_field :product_id, value: product.id %>
            </div>
        </div>
        <div class="col-4 col-sm-4 col-md-4 text-right" style="padding: 0">
          <%= button_tag class: "btn btn-primary" do %>
            <i class="fa fa-edit"></i>
          <% end %>
          <%= link_to carts_destroy_path(product_id: product.id),
            {data: {confirm: "Are you sure?"},
              method: :delete, remote: true, class: "btn btn-danger"} do %>
            <i class="fa fa-trash-o"></i>
          <% end %>
        </div>
      </div>
    </div>
    <hr>
  <% end %>
<% end %>
