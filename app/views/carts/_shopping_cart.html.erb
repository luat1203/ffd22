<% if @cart_products.nil? %>
  <p class="text-center">
    <%= t ".no_item" %>
  </p>
<% else %>
  <div class="card shopping-cart">
    <div class="card-header bg-dark text-light">
        <%= t ".your_cart" %>
        <div class="clearfix"></div>
    </div>

    <div class="card-body">
      <% @cart_products.each do |product_id, quantity| %>
        <%= render "carts/cart_row", product: find_product(product_id),
          quantity: quantity, show_total: true %>
      <% end %>
    </div>
  </div>
<% end %>
