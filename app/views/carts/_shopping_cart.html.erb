<div class="card shopping-cart">
  <div class="card-header bg-dark text-light">
    <%= t ".your_cart" %>
    <div class="clearfix"></div>
  </div>
  <div class="card-body">

    <% if @cart_products.blank? %>
      <p class="text-center">
        <%= t ".no_item" %>
      </p>
    <% else %>
      <% @cart_products.each do |product_id, quantity| %>
        <%= render "carts/cart_row", product: find_product(product_id),
          quantity: quantity, show_total: true %>
      <% end %>
    <% end %>
  </div>
</div>
